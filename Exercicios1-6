#include <stdio.h>

int main() {
float lado1, lado2, lado3;
    printf("Insira o comprimento do lado 1: ");
    scanf("%f", &lado1);
    printf("Insira o comprimento do lado 2: ");
    scanf("%f", &lado2);
    printf("Insira o comprimento do lado 3: ");
    scanf("%f", &lado3);

    if(lado1 + lado2 > lado3 && lado1 + lado3 > lado2 && lado2 + lado3 > lado1) {
        printf("Os lados fornecidos podem formar um triangulo.\n");} 
    else{
        printf("Os lados fornecidos nao podem formar um triangulo.\n");
    }
}
